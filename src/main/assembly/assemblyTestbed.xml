<assembly>
    <id>testbed</id>
    <formats>
        <format>zip</format>
    </formats>

    <dependencySets>

        <dependencySet>
            <outputDirectory>webservices</outputDirectory>
            <includes>
                <include>dk.statsbiblioteket.doms.*:*:war:*:*</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>fedoralib</outputDirectory>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>dk.statsbiblioteket.doms.domsutil:*:jar:*</include>
                <include>dk.statsbiblioteket.sbutil:sbutil</include>
                <include>dk.statsbiblioteket.doms.authchecker:authchecker-fedoralogin</include>
                <include>dk.statsbiblioteket.doms.ecm:ecm-fedoravalidatorhook</include>
                <include>dk.statsbiblioteket.doms.bitstorage.highlevel:bitstorage-highlevel-hookApprove</include>
            </includes>
            <excludes>
                <exclude>log4j:log4j</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>data/fedora</outputDirectory>
            <includes>
                <include>org.fcrepo:fcrepo-installer</include>
            </includes>
        </dependencySet>


        <dependencySet>
            <outputDirectory>ingester</outputDirectory>
            <includes>
                <include>dk.statsbiblioteket.doms.ingesters:radio-tv</include>
            </includes>
        </dependencySet>

    </dependencySets>

    <fileSets>
        <fileSet>
            <outputDirectory>data/policies</outputDirectory>
            <directory>src/main/resources/policies</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>data/schemas</outputDirectory>
            <directory>src/main/resources/schemas</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>data/preingestfiles</outputDirectory>
            <directory>src/main/resources/preingestfiles</directory>
        </fileSet>

        <fileSet>
            <outputDirectory>data/templates</outputDirectory>
            <directory>src/main/resources/templates</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>data/tomcat</outputDirectory>
            <directory>src/main/resources/tomcat</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>data/objects/batch</outputDirectory>
            <directory>src/main/resources/objects/batch</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/scripts</directory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>docs</outputDirectory>
            <directory>docs</directory>
        </fileSet>
    </fileSets>


</assembly>

