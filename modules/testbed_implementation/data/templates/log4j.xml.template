<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     debug="false">
    <appender name="LowlevelBitstorage"
              class="dk.statsbiblioteket.doms.surveillance.logappender.LogRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="LowlevelBitstorageFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms-lowlevel.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="HighlevelBitstorage"
              class="dk.statsbiblioteket.doms.surveillance.logappender.LogRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="HighlevelBitstorageFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms-highlevel.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="Characteriser"
              class="dk.statsbiblioteket.doms.surveillance.logappender.LogRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="CharacteriserFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms-characteriser.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="Surveyor"
              class="dk.statsbiblioteket.doms.surveillance.logappender.LogRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="SurveyorFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms-surveyor.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="Fedora"
              class="dk.statsbiblioteket.doms.surveillance.logappender.LogRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="FedoraFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/fedora.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="FedoraSurveyorFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms-fedorasurveyor.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="ECM"
              class="dk.statsbiblioteket.doms.surveillance.logappender.LogRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="ECMFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms-ecm.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="AuthChecker"
              class="dk.statsbiblioteket.doms.surveillance.logappender.LogRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="AuthCheckerFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms-authchecker.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="DomsFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="INFO"/>
        <param name="File" value="$TESTBEDHOME$/logs/doms.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <!-- A console appender -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="ERROR"/>
        <!-- or WARN or DEBUG or INFO -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <logger name="dk.statsbiblioteket.doms.bitstorage.lowlevel">
        <level value="ALL"/>
        <appender-ref ref="LowlevelBitstorage"/>
        <appender-ref ref="LowlevelBitstorageFile"/>
    </logger>

    <logger name="dk.statsbiblioteket.doms.bitstorage.highlevel">
        <level value="ALL"/>
        <appender-ref ref="HighlevelBitstorage"/>
        <appender-ref ref="HighlevelBitstorageFile"/>
    </logger>

    <logger name="dk.statsbiblioteket.doms.bitstorage.characteriser">
        <level value="ALL"/>
        <appender-ref ref="Characteriser"/>
        <appender-ref ref="CharacteriserFile"/>
    </logger>

    <logger name="dk.statsbiblioteket.doms.surveillance.surveyor">
        <level value="ALL"/>
        <appender-ref ref="Surveyor"/>
        <appender-ref ref="SurveyorFile"/>
    </logger>

    <logger name="dk.statsbiblioteket.doms.surveillance.fedorasurveyor">
        <level value="ALL"/>
        <appender-ref ref="Fedora"/>
        <appender-ref ref="FedoraSurveyorFile"/>
    </logger>

    <logger name="org.fcrepo">
        <level value="ALL"/>
        <appender-ref ref="Fedora"/>
        <appender-ref ref="FedoraFile"/>
    </logger>

    <logger name="fedora">
        <level value="ALL"/>
        <appender-ref ref="Fedora"/>
        <appender-ref ref="FedoraFile"/>
    </logger>

    <logger name="dk.statsbiblioteket.doms.ecm">
        <level value="ALL"/>
        <appender-ref ref="ECM"/>
        <appender-ref ref="ECMFile"/>
    </logger>

    <logger name="dk.statsbiblioteket.doms.authchecker">
        <level value="ALL"/>
        <appender-ref ref="AuthChecker"/>
        <appender-ref ref="AuthCheckerFile"/>
    </logger>


    <root>
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DomsFile"/>
    </root>
</log4j:configuration>