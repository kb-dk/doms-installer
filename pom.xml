<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>dk.statsbiblioteket.doms</groupId>
        <artifactId>doms</artifactId>
        <version>0.0.1</version>
    </parent>

    <groupId>dk.statsbiblioteket.doms.testbed</groupId>
    <artifactId>testbed</artifactId>
    <version>0.10.18</version>


    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- append to the packaging phase. -->
                        <goals>
                            <goal>single</goal> <!-- goals == mojos -->
                        </goals>
                    </execution>
                </executions>

            </plugin>
        </plugins>
    </build>

    <dependencies>

        <!--Stuff for fedora libs-->
        <dependency>
            <groupId>dk.statsbiblioteket.doms.domsutil</groupId>
            <artifactId>domsutil-bundle</artifactId>
            <version>0.0.17</version>
            <type>pom</type>
        </dependency>

        <dependency>
            <groupId>dk.statsbiblioteket.doms.authchecker</groupId>
            <artifactId>authchecker-fedoralogin</artifactId>
            <version>0.0.7</version>
        </dependency>

        <dependency>
            <groupId>dk.statsbiblioteket.doms.ecm</groupId>
            <artifactId>ecm-fedoravalidatorhook</artifactId>
            <version>0.0.14#SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.doms.bitstorage.highlevel</groupId>
            <artifactId>bitstorage-highlevel-hookApprove</artifactId>
            <version>0.0.15</version>
        </dependency>


        <!--Fedora itself-->
        <dependency>
            <groupId>org.fcrepo</groupId>
            <artifactId>fcrepo-installer</artifactId>
            <version>${fcrepo.version}</version>
            <type>jar</type>
        </dependency>

        <!--Webservices-->
        <dependency>
            <groupId>dk.statsbiblioteket.doms.ecm</groupId>
            <artifactId>ecm-webservice</artifactId>
            <version>0.0.14#SNAPSHOT</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.doms.pidgenerator</groupId>
            <artifactId>pidgenerator-service</artifactId>
            <version>0.0.6#SNAPSHOT</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>dk.statsbiblioteket.doms.authchecker</groupId>
            <artifactId>authchecker-service</artifactId>
            <version>0.0.7</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.doms.bitstorage.lowlevel</groupId>
            <artifactId>bitstorage-lowlevel-service</artifactId>
            <version>0.0.15</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.doms.bitstorage.characteriser</groupId>
            <artifactId>bitstorage-characteriser-service</artifactId>
            <version>0.0.15</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.doms.bitstorage.highlevel</groupId>
            <artifactId>bitstorage-highlevel-service</artifactId>
            <version>0.0.15</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.doms.central</groupId>
            <artifactId>centralWebservice-service</artifactId>
            <version>0.0.17</version>
            <type>war</type>
        </dependency>

    </dependencies>

</project>
